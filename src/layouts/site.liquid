{% layout 'html' %}

{% block html %}
<div class="wrapper">
  <aside>
    <p>Albin Landgren</p>
    <p class="muted">
      Software engineer working at <a href="https://grebban.com" target="_blank">Grebban</a> with some of the most
      iconic Scandinavian brands of today and tomorrow.
    </p>

    <div class="posts-section">
      <h2>Posts</h2>
      <div>
        {% for post in post_data %}
          <a href="{{ post.slug }}" class="sidebar-link">
            {{ post.title }}
          </a>
        {% endfor %}
      </div>
    </div>
  </aside>

  <main>
    {% block site %}
    {% endblock site %}
  </main>
</div>
{% endblock html %}
